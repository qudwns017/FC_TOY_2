<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.kdtbe8_toyproject2.itinerary.db.mapper.ItineraryMapper">
    <select id="findAllItineraries" resultType="org.example.kdtbe8_toyproject2.itinerary.db.entity.ItineraryEntity">
        SELECT *
        FROM itinerary
        WHERE trip_id = #{tripId}
    </select>

    <select id="findMoveById" resultType="org.example.kdtbe8_toyproject2.itinerary.db.entity.MoveEntity">
        SELECT *
        FROM move
        WHERE itinerary_id = #{itineraryId}
    </select>

    <select id="findStayById" resultType="org.example.kdtbe8_toyproject2.itinerary.db.entity.StayEntity">
        SELECT *
        FROM stay
        WHERE itinerary_id = #{itineraryId}
    </select>
</mapper>
