<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.kdtbe8_toyproject2.trip.db.TripMapper">
    <select id="getTripList" resultType="org.example.kdtbe8_toyproject2.trip.model.TripListDto">
        select id, name
        from trip;
    </select>

    <select id="getTripById" resultType="TripEntity">
        SELECT *
        FROM trip A
                 JOIN accommodation B on A.id = B.trip_id;
    </select>
</mapper>